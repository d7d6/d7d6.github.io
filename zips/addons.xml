<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.d7d6" version="1.0.1" name="d7d6 video" provider-name="d7d6">
  <requires>
    <import addon="xbmc.python" version="3.0.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">d7d6 Video Plugin for Kodi</summary>
    <description lang="en_GB">A video plugin for Kodi mediacenter for reading video from a file</description>
    <disclaimer lang="en_GB">A video plugin for Kodi mediacenter for reading video from a file</disclaimer>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
      <screenshot>resources\screenshot-01.jpg</screenshot>
      <screenshot>resources\screenshot-02.jpg</screenshot>
      <screenshot>resources\screenshot-03.jpg</screenshot>
    </assets>
    <news>
      v1.0.1 (30.12.2023)
      - smb support on android device
      v1.0.0 (28.12.2023)
      - First release
    </news>
  </extension>
</addon>

<addon id="repository.d7d6" name="d7d6 add-on repository" version="1.0.0" provider-name="d7d6">
    <extension point="xbmc.addon.repository" name="d7d6 Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/d7d6/repository.d7d6/main/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/d7d6/repository.d7d6/main/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/d7d6/repository.d7d6/main/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>d7d6 Repository for Kodi</summary>
        <description>d7d6 Repository for Kodi add-ons</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
